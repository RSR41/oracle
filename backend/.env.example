# Database
DB_PROVIDER="prisma" # prisma | supabase | firebase(예정)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ef_db
POSTGRES_PORT=5432
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ef_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET="dev_secret_key_do_not_use_in_prod"
JWT_EXPIRATION="7d"

# App
PORT=8080
PUBLIC_BASE_URL="http://localhost:3000" # PWA URL
API_BASE_URL="http://localhost:8080"

# ============================================
# LLM Configuration (AI 기능용)
# ============================================
# 지원 Provider: openai, gemini, anthropic
LLM_PROVIDER="gemini"

# Gemini (Google AI)
GEMINI_API_KEY=""
GEMINI_MODEL="gemini-1.5-flash"

# OpenAI (대안)
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4o-mini"

# Anthropic (대안)
ANTHROPIC_API_KEY=""
ANTHROPIC_MODEL="claude-3-haiku-20240307"

# LLM 공통 설정
LLM_TIMEOUT_MS=30000
LLM_MAX_TOKENS=1024

# ============================================
# Rate Limiting
# ============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=20

